{
  timezone: "Asia/Tokyo",
  baseBranches: ["main"],
  extends: ["config:base", ":semanticCommitTypeAll(chore)"],
  enabledManagers: ["npm", "docker-compose", "dockerfile", "github-actions"],
  dependencyDashboard: true,
  schedule: ["after 1pm on monday"],
  automergeSchedule: ["after 1pm on tuesday"],
  labels: ["dependencies"],
  rangeStrategy: "bump",
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
  },
  vulnerabilityAlerts: {
    labels: ["security"],
    automerge: true,
  },
  packageRules: [
    {
      matchManagers: ["npm"],
      matchUpdateTypes: ["patch", "minor"],
      matchPackagePatterns: ["*"],
      matchDepTypes: ["dependencies", "devDependencies", "peerDependencies"],
      groupName: "patch-minor",
      automerge: true,
    },
  ],
}
